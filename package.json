    "jest": "^29.3.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^2.8.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
